{% extends 'base.html.twig' %}

{% block title %}Boards{% endblock %}
{% block headline %}Boards{% endblock %}
{% block button %}<a href="{{ path('app_board_new') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">New Board</a>{% endblock %}
{% block body %}
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner</th>
                <th scope="col">Created at</th>
                <th scope="col">Show</th>
            </tr>
        </thead>
        <tbody>
            {% for board in boards %}
            <tr>
                <td>{{ board.id }}</td>
                <td>{{ board.name }}</td>
                <td>{{ board.description }}</td>
                <td>{{ board.owner.username }}</td>
                <td>{{ board.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
                <td><a class="btn btn-sm btn-primary glow-hover-primary w-100" href="{{ path('app_board_show_board', {id: board.id}) }}">Show board</a></td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}