{% extends 'base.html.twig' %}

{% block title %}Boards{% endblock %}
{% block headline %}Boards{% endblock %}
{% block button %}{% if boards is not empty %}<a href="{{ path('app_board_new') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">New Board</a>{% endif %}{% endblock %}
{% block body %}
{% if boards is empty %}
<div class="container mx-auto d-flex flex-column justify-content-center align-items-center my-5">
<span class="material-symbols-rounded fs-1">view_kanban</span>
<h1>No board yet?</h1>
<p class="lead">Create one step by step.</p> 
<p class="lead">
<a href="{{ path('app_board_wizard') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">Start Tutorial</a>
</p>
</div>
{% else %}
<hr>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner</th>
                <th scope="col">Created at</th>
                <th scope="col">Show</th>
            </tr>
        </thead>
        <tbody>
            {% for board in boards %}
            <tr>
                <td>{{ board.id }}</td>
                <td>{{ board.name }}</td>
                <td>{{ board.description }}</td>
                <td>{{ board.owner.username }}</td>
                <td>{{ board.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
                <td><a class="btn btn-sm btn-primary glow-hover-primary w-100" href="{{ path('app_board_show_board', {id: board.id}) }}">Show board</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
{% endblock %}