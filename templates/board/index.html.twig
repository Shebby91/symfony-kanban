{% extends 'base.html.twig' %}

{% block title %}Boards{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Boards</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <a href="{{ path('app_board_new') }}" class="btn btn-primary mb-3">New Board</a>
    </div>
</div>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner</th>
                <th scope="col">Created at</th>
                <th scope="col">Show</th>
            </tr>
        </thead>
        <tbody>
            {% for board in boards %}
            <tr>
                <td><a href="{{ path('app_board_show', {id: board.id}) }}">{{ board.id }}</a></td>
                <td>{{ board.name }}</td>
                <td>{{ board.description }}</td>
                <td>{{ board.owner.username }}</td>
                <td>{{ board.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
                <td><a href="{{ path('app_board_show_board', {id: board.id}) }}">Show</a></td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}