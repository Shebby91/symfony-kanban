{% extends 'base.html.twig' %}

{% block title %}{{board.name}}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{board.name}}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <a href="{{ path('app_lane_new', {boardId: board.id}) }}" class="btn btn-primary mb-3">New Lane</a>
      <a href="{{ path('app_label_new', {boardId: board.id}) }}" class="btn btn-primary mb-3 ms-2">New Label</a>
    </div>
</div>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">title</th>
                <th scope="col">position</th>
            </tr>
        </thead>
        <tbody>
            {% for lane in lanes %}
            <tr>
                <td><a href="{{ path('app_board_show', {id: lane.id}) }}">{{ lane.id }}</a></td>
                <td>{{ lane.title }}</td>
                <td>{{ lane.position }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}