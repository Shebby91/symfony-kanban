{% extends 'base.html.twig' %}

{% block title %}Cards{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Cards</h1>
    <a href="{{ path('app_card_label_index') }}" class="btn btn-link p-0">Show labeled cards</a>
          <a href="{{ path('app_card_new') }}" class="btn btn-primary mb-3">New Card</a>
</div>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Created by</th>
                <th scope="col">Created at</th>
                <th scope="col">Assign User</th
            </tr>
        </thead>
        <tbody>
            {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td>{{ card.title }}</td>
                <td>{{ card.description }}</td>
                <td>{{ card.lane.title }}</td>
                <td>{{ card.createdBy.username }}</td>
                <td>{{ card.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
                <td><a href="{{ path('app_card_assign_user', {cardId: card.id}) }}" class="btn btn-link p-0">Assign User</a></td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}