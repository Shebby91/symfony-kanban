{% extends 'base.html.twig' %}

{% block title %}Assignments{% endblock %}
{% block headline %}Assignments{% endblock %}
{% block button %}
<a href="{{ path('app_card_assign_user') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">Assign User</a>
{% endblock %}
{% block body %}
<hr>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Card</th>
                <th scope="col">Assigned User</th>
                <th scope="col">Assigned at</th>
            </tr>
        </thead>
        <tbody>
            {% for assignment in assignments %}
            <tr>
                <td>{{ assignment.id }}</td>
                <td>{{ assignment.card.title}}</td>
                <td>{{ assignment.user.username }}</td>
                <td>{{ assignment.assignedAt|date("d.m.Y", "Europe/Berlin") }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}