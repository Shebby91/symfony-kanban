{% extends 'base.html.twig' %}

{% block title %}Assignments{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Assignments</h1>
    <a href="{{ path('app_card_assign_user') }}" class="btn btn-primary">Assign User</a>
</div>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Card</th>
                <th scope="col">Assigned User</th>
                <th scope="col">Assigned at</th>
            </tr>
        </thead>
        <tbody>
            {% for assignment in assignments %}
            <tr>
                <td>{{ assignment.id }}</td>
                <td>{{ assignment.card.title}}</td>
                <td>{{ assignment.user.username }}</td>
                <td>{{ assignment.assignedAt|date("d.m.Y", "Europe/Berlin") }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}