{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}
{% block headline %}Comments{% endblock %}
{% block button %}
<a href="{{ path('app_card_comment_new') }}"  class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">New Comment</a>
{% endblock %}
{% block body %}
<hr>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Comment</th>
                <th scope="col">Created by</th>
                <th scope="col">Created at</th>
                <th scope="col">Card</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content}}</td>
                <td>{{ comment.user.username }}</td>
                <td>{{ comment.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
                <td>{{ comment.card.title }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}