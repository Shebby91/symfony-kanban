{% extends 'base.html.twig' %}

{% block title %}Labels{% endblock %}
{% block headline %}Labels{% endblock %}
{% block button %}
<a href="{{ path('app_label_new') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">New Label</a>
{% endblock %}
{% block body %}
<hr>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Board</th>
                <th scope="col">Badge</th>
            </tr>
        </thead>
        <tbody>
            {% for label in labels %}
            <tr>
                <td>{{ label.id }}</td>
                <td>{{ label.name }}</td>
                <td>{{ label.board.name }}</td>
                <td><span class="badge text-bg-info" style="background-color: {{ label.color }}!important;">{{ label.color }}</span></td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}