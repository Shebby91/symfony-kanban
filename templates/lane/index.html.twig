{% extends 'base.html.twig' %}

{% block title %}Lanes{% endblock %}
{% block headline %}Lanes{% endblock %}
{% block button %}
<a href="{{ path('app_lane_new') }}" class="btn btn-sm btn-primary glow-hover-primary mb-0 me-4">New Lane</a>
{% endblock %}
{% block body %}
<hr>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Board</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            {% for lane in lanes %}
            <tr>
                <td><a href="{{ path('app_lane_show', {id: lane.id}) }}">{{ lane.id }}</a></td>
                <td>{{ lane.title }}</td>
                <td>{{ lane.board.name }}</td>
                <td>{{ lane.position }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}