{% extends 'base.html.twig' %}

{% block title %}{{lane.title}}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{lane.title}}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <a href="{{ path('app_card_new', {laneId: lane.id}) }}" class="btn btn-primary mb-3">New Card</a>
    </div>
</div>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Created by</th>
                <th scope="col">Created at</th>
            </tr>
        </thead>
        <tbody>
            {% for card in cards %}
            <tr>
                <td><a href="{#{ path('app_board_show', {id: lane.id}) }#}">{{ card.id }}</a></td>
                <td>{{ card.title }}</td>
                <td>{{ card.description }}</td>
                <td>{{ card.createdBy.username }}</td>
                <td>{{ card.createdAt|date("d.m.Y", "Europe/Berlin") }}</td>
            </tr>
            {% else %}
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}